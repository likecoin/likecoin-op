{
  "extends": "solhint:recommended",
  "rules": {
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "use-natspec": "off",
    "no-empty-blocks": "off",
    "gas-indexed-events": "off",
    "var-name-mixedcase": "off",
    "func-visibility": ["warn", { "ignoreConstructors": true }]
  }
}
